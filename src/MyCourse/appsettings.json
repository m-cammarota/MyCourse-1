{
    "Kestrel": {
        "Limits": {
          "MaxRequestBodySize": 5242880
        }
    },
    "Logging": {
        "LogLevel": {
          "Default": "Warning"
        }
    },
    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },
    "Courses": {
        "PerPage": 10,
        "InHome": 3,
        "Order": {
                "By": "Rating",
                "Ascending": false,
				"Allow": ["Id", "Title", "Rating", "CurrentPrice"]
        }
    },
    "MemoryCache": {
    },
    "ResponseCache": {
        "Home": {
            "Duration": 60,
            "Location": "Client",
            "VaryByQueryKeys": ["page"]
        }
    },
    "Smtp": {
        "Host": "smtp.example.org",
        "Port": 25,
        "Security": "StartTls",
        "Username": "Username del server SMTP",
        "Password": "Password del server SMTP",
        "Sender": "MyCourse <noreply@example.org>"
    },
    "ReCaptcha": {
        "SiteKey": "SiteKey fornita da Google su https://www.google.com/recaptcha/admin/create",
        "SecretKey": "SecretKey fornita da Google su https://www.google.com/recaptcha/admin/create",
        "Version": "v2"
    },
    "Users": {
        "AssignAdministratorRoleOnRegistration": "admin@example.com",
        "NotificationEmailRecipient": "boss@example.com"
    },
    "Paypal": {
        "ClientId": "ClientId fornito da Paypal su https://developer.paypal.com",
        "ClientSecret": "ClientSecret fornito da Paypal su https://developer.paypal.com",
        "IsSandbox": true,
        "BrandName": "MyCourse"
    },
    "Stripe": {
        "PrivateKey": "Chiave privata fornita da Stripe su https://dashboard.stripe.com/"
    }
}